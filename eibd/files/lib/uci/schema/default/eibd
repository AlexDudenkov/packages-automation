package eibd

config package
	option title 'eibd configuration'

config section
	option name	'eibdinterface'
	option title	'EIB Interface entry'
	option package	'eibd'
	option named	true
	option required	true

config variable
	option name	'enabled'
	option title	'Enable this service entry'
	option section	'eibd.eibdinterface'
	option datatype	'boolean'

config variable
	option name	'interface'
	option title	'Name of the EIB Interface'
	option section	'eibd.eibdinterface'
	option datatype	'string'
	option required	true

config variable
	option name	'Discovery'
	option title	'Discovery EIB/IP Service for ETS3'
	option section	'eibd.eibdinterface'

config variable
	option name	'Server'
	option title	'Server mode EIB/IP for ETS3'
	option section	'eibd.eibdinterface'

config variable
	option name	'Tunnelling'
	option title	'Tunnelling mode EIB/IP for ETS3'
	option section	'eibd.eibdinterface'

config variable
	option name	'listentcp'
	option title	'TCP Port for eibd clients 6720'
	option section	'eibd.eibdinterface'
	option datatype	'enum'

config variable
	option name	'listenlocal'
	option title	'Path to Socket for eibd clients /tmp/eib'
	option section	'eibd.eibdinterface'
	option datatype	'string'

config variable
	option name	'eibaddr'
	option title	'EIB Address for the Interface 0.0.1'
	option section	'eibd.eibdinterface'
	option datatype	'string'

config variable
	option name	'daemon'
	option title	'Path to Logfile /tmp/eibd.log'
	option section	'eibd.eibdinterface'
	option datatype	'string'

config variable
	option name	'trace'
	option title	'Debug messages 0 low 1023 high'
	option section	'eibd.eibdinterface'
	option datatype	'string'

config variable
	option name	'pidfile'
	option title	'Path to PID File /var/run/eibd.pid'
	option section	'eibd.eibdinterface'
	option datatype	'string'
